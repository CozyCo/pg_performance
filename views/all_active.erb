<header role="banner">All Active Running</header>
  <%= erb :menu %>
<table class="all-active">
  <thead>
    <tr>
      <th>Application Name</th>
      <th>Start Time</th>
      <th>State</th>
      <th>Query</th>
    </tr>
  </thead>

  <% all_active_rows.each do |row| %>
      <tr>
        <td><%= row[:application_name] %></td>
        <td><%= row[:query_start] %></td>
        <td><%= row[:state] %></td>
        <td><%= sql(row[:query]) %></td>
      </tr>
  <% end %>
</table>